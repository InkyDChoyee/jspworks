<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
<jsp:useBean id="login" class="bean.LoginBean" />
<jsp:setProperty property="uid" name="login"/>
<jsp:setProperty property="passwd" name="login"/>

<!-- setUid(), setPasswd()를 참조함 -->

<%
	String id = request.getParameter("uid");
	String pw = request.getParameter("upasswd");

	if(id == "" || pw == "") {
		out.println("<script>");
		out.println();
		out.println();
		out.println("</script>");
	}else{
		boolean result = login.checkUser();
		if(result){
			out.println("로그인 성공");
		}else{
			out.println("로그인 실패");
		}
	}
%>

<p>아이디 : <%= login.getUid() %></p>
<p>비밀번호 : <%= login.getPasswd() %></p>